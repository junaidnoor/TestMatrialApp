        <item name="android:dividerHeight">1sp</item>
    </style>

    <!-- Define Text View Style -->
    <style name="apptheme_textview">
        <item name="android:textColor">@color/AppThemeColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="indusred_textview">
        <item name="android:textColor">@color/IndusRedColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="indusblue_textview">

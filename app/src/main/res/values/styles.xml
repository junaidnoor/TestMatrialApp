    <!-- Define List View Style -->
    <style name="apptheme_listview">
        <item name="android:divider">@color/AppThemeColorPrimary</item>
        <item name="android:dividerHeight">1sp</item>
    </style>
    <style name="indusred_listview">
        <item name="android:divider">@color/IndusRedColorPrimary</item>
        <item name="android:dividerHeight">1sp</item>
    </style>
    <style name="indusblue_listview">
